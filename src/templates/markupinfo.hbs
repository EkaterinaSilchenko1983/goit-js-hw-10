{{#each this}}
  <li>
    <img src='{{flags.svg}}' alt='{{name.official}}' width='70' height='auto' />
    <h2>{{name.official}}</h2>
    <p>Capital: {{capital}}</p>
    <p>Population: {{population}}</p>
    <p>Languages:
      {{#each languages}} {{this}}{{#unless @last}}, {{/unless}} {{/each}}</p>

  </li>
{{/each}}